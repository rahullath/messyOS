---
// src/pages/simple-login.astro - Production Simple Login Page
import Layout from '../layouts/Layout.astro';
import ProductionPrivyAuth from '../components/auth/ProductionPrivyAuth.tsx';
import LoginButton from '../components/auth/LoginButton.tsx';

// Simple setup - Privy handles auth state
---

<Layout title="Sign In - MeshOS">
  <ProductionPrivyAuth client:load>
    <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-6">
      <div class="max-w-sm w-full">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-white mb-2">
            <span class="text-cyan-400">mesh</span>OS
          </h1>
          <p class="text-gray-400">Quick Login</p>
        </div>
        
        <LoginButton client:load />
        
        <div class="text-center mt-6">
          <a href="/" class="text-sm text-gray-400 hover:text-white">
            ‚Üê Home
          </a>
        </div>
      </div>
    </div>
  </ProductionPrivyAuth>
</Layout>