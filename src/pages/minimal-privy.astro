<!DOCTYPE html>
<html>
<head>
    <title>Minimal Privy Test</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
</head>
<body>
    <div id="root">Loading...</div>
    
    <script type="module">
        import { PrivyProvider, usePrivy } from 'https://esm.sh/@privy-io/react-auth@2.21.4';
        
        const { createElement: e, useState, useEffect } = React;
        
        function TestComponent() {
            const privy = usePrivy();
            const [status, setStatus] = useState('Starting...');
            
            useEffect(() => {
                setStatus(`Ready: ${privy.ready}, Auth: ${privy.authenticated}`);
            }, [privy.ready, privy.authenticated]);
            
            return e('div', { style: { padding: '20px', fontFamily: 'Arial' } }, [
                e('h1', { key: 'h1' }, 'Minimal Privy Test'),
                e('p', { key: 'status' }, 'Status: ' + status),
                e('p', { key: 'appid' }, 'App ID: cmeaj35yf006oic0cyhhppt65'),
                privy.ready && !privy.authenticated ? 
                    e('button', { 
                        key: 'btn',
                        onClick: () => privy.login(),
                        style: { padding: '10px', background: 'blue', color: 'white' }
                    }, 'Login') : null
            ]);
        }
        
        function App() {
            return e(PrivyProvider, {
                appId: 'cmeaj35yf006oic0cyhhppt65',
                config: { loginMethods: ['email'] }
            }, e(TestComponent));
        }
        
        ReactDOM.render(e(App), document.getElementById('root'));
    </script>
</body>
</html>