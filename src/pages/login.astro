---
// src/pages/login.astro - Updated Login/Signup Page
import Layout from '../layouts/Layout.astro';
import { createServerAuth } from '../lib/auth/simple-multi-user';

// Check if user is already authenticated
const serverAuth = createServerAuth(Astro.cookies);
const user = await serverAuth.getUser();

if (user) {
  return Astro.redirect('/');
}
---

<Layout title="Sign In - messyOS">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 flex items-center justify-center p-6">
    <div class="max-w-md w-full space-y-8">
      
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white mb-2">
          <span class="text-cyan-400">messy</span>OS
        </h1>
        <p class="text-gray-300">Your AI-powered life optimization system</p>
      </div>

      <!-- Auth Form -->
      <div class="bg-black/20 backdrop-blur-sm border border-white/10 rounded-xl p-8">
        
        <!-- Toggle Buttons -->
        <div class="flex mb-6 bg-gray-800 rounded-lg p-1">
          <button 
            id="signin-tab" 
            class="flex-1 py-2 px-4 text-center rounded-md transition-colors bg-cyan-600 text-white"
          >
            Sign In
          </button>
          <button 
            id="signup-tab" 
            class="flex-1 py-2 px-4 text-center rounded-md transition-colors text-gray-400 hover:text-white"
          >
            Sign Up
          </button>
        </div>

        <!-- Sign In Form -->
        <form id="signin-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
            <input 
              type="email" 
              name="email" 
              required
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-cyan-500"
              placeholder="Enter your email"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Password</label>
            <input 
              type="password" 
              name="password" 
              required
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-cyan-500"
              placeholder="Enter your password"
            />
          </div>

          <button 
            type="submit"
            class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors"
          >
            Sign In
          </button>
        </form>

        <!-- Sign Up Form -->
        <form id="signup-form" class="space-y-4 hidden">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
            <input 
              type="email" 
              name="email" 
              required
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-cyan-500"
              placeholder="Enter your email"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Password</label>
            <input 
              type="password" 
              name="password" 
              required
              minlength="6"
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-cyan-500"
              placeholder="Create a password (6+ characters)"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Confirm Password</label>
            <input 
              type="password" 
              name="confirmPassword" 
              required
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-cyan-500"
              placeholder="Confirm your password"
            />
          </div>

          <button 
            type="submit"
            class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors"
          >
            Create Account
          </button>
        </form>

        <!-- Google Sign In -->
        <div class="mt-6 pt-6 border-t border-gray-600">
          <button 
            id="google-signin"
            class="w-full bg-white hover:bg-gray-100 text-gray-900 font-semibold py-3 px-4 rounded-lg transition-colors flex items-center justify-center space-x-2"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285f4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34a853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#fbbc05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#ea4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continue with Google</span>
          </button>
        </div>

        <!-- Links -->
        <div class="mt-6 text-center space-y-2">
          <a href="#" id="forgot-password" class="text-sm text-cyan-400 hover:text-cyan-300">
            Forgot your password?
          </a>
          <br>
          <a href="/landing" class="text-sm text-gray-400 hover:text-white">
            ‚Üê Back to landing page
          </a>
        </div>
      </div>

      <!-- Status Messages -->
      <div id="message" class="hidden p-4 rounded-lg text-center"></div>
    </div>
  </div>

  <script>
    import { supabase } from '../lib/supabase/client';

    // Tab switching
    const signinTab = document.getElementById('signin-tab');
    const signupTab = document.getElementById('signup-tab');
    const signinForm = document.getElementById('signin-form');
    const signupForm = document.getElementById('signup-form');

    function showSignIn() {
      signinTab.classList.add('bg-cyan-600', 'text-white');
      signinTab.classList.remove('text-gray-400');
      signupTab.classList.remove('bg-cyan-600', 'text-white');
      signupTab.classList.add('text-gray-400');
      signinForm.classList.remove('hidden');
      signupForm.classList.add('hidden');
    }

    function showSignUp() {
      signupTab.classList.add('bg-cyan-600', 'text-white');
      signupTab.classList.remove('text-gray-400');
      signinTab.classList.remove('bg-cyan-600', 'text-white');
      signinTab.classList.add('text-gray-400');
      signupForm.classList.remove('hidden');
      signinForm.classList.add('hidden');
    }

    signinTab.addEventListener('click', showSignIn);
    signupTab.addEventListener('click', showSignUp);

    // Form handling
    function showMessage(text, type = 'error') {
      const messageEl = document.getElementById('message');
      messageEl.textContent = text;
      messageEl.className = `p-4 rounded-lg text-center ${
        type === 'error' ? 'bg-red-900/50 text-red-200 border border-red-800' : 
        'bg-green-900/50 text-green-200 border border-green-800'
      }`;
      messageEl.classList.remove('hidden');
    }

         // Sign In Form
     signinForm.addEventListener('submit', async (e) => {
       e.preventDefault();
       const formData = new FormData(e.target);
       const email = formData.get('email');
       const password = formData.get('password');

       try {
         const { error } = await supabase.auth.signInWithPassword({ email, password });
         if (error) throw error;
         showMessage('Signed in successfully! Redirecting...', 'success');
         setTimeout(() => {
           window.location.href = '/onboarding';
         }, 1000);
       } catch (error) {
         showMessage(error.message || 'Sign in failed. Please try again.');
       }
     });

         // Sign Up Form
     signupForm.addEventListener('submit', async (e) => {
       e.preventDefault();
       const formData = new FormData(e.target);
       const email = formData.get('email');
       const password = formData.get('password');
       const confirmPassword = formData.get('confirmPassword');

       if (password !== confirmPassword) {
         showMessage('Passwords do not match.');
         return;
       }

       try {
         const { error } = await supabase.auth.signUp({ 
           email, 
           password,
           options: {
             emailRedirectTo: `${window.location.origin}/onboarding`
           }
         });
         if (error) throw error;
         showMessage('Account created! Check your email to verify your account.', 'success');
       } catch (error) {
         showMessage(error.message || 'Sign up failed. Please try again.');
       }
     });

         // Google Sign In
     document.getElementById('google-signin').addEventListener('click', async () => {
       try {
         const { error } = await supabase.auth.signInWithOAuth({
           provider: 'google',
           options: {
             redirectTo: `${window.location.origin}/onboarding`
           }
         });
         if (error) throw error;
       } catch (error) {
         showMessage(error.message || 'Google sign in failed. Please try again.');
       }
     });

         // Forgot Password
     document.getElementById('forgot-password').addEventListener('click', async (e) => {
       e.preventDefault();
       const email = prompt('Enter your email address:');
       if (email) {
         try {
           const { error } = await supabase.auth.resetPasswordForEmail(email, {
             redirectTo: `${window.location.origin}/reset-password`
           });
           if (error) throw error;
           showMessage('Password reset email sent! Check your inbox.', 'success');
         } catch (error) {
           showMessage(error.message || 'Failed to send reset email.');
         }
       }
     });
  </script>
</Layout>