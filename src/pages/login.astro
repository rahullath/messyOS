---
import WorkingPrivyProvider from '../components/auth/WorkingPrivyProvider.tsx';
import ProperEmailLogin from '../components/auth/ProperEmailLogin.tsx';
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign In - meshOS</title>
</head>
<body>
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 flex items-center justify-center p-6">
    <div class="max-w-md w-full space-y-8">
      
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white mb-2">
          <span class="text-cyan-400">mesh</span>OS
        </h1>
        <p class="text-gray-300 mb-8">Your AI-powered life optimization system</p>
      </div>

      <!-- Proper Email Login -->
      <WorkingPrivyProvider client:load>
        <ProperEmailLogin client:load />
      </WorkingPrivyProvider>
      
      <!-- Debug Info -->
      <div class="text-center">
        <details class="text-xs text-gray-500">
          <summary class="cursor-pointer hover:text-gray-400">Debug Info</summary>
          <div class="mt-2 p-2 bg-gray-800/50 rounded text-left">
            <p>Privy App ID: {import.meta.env.PUBLIC_PRIVY_APP_ID ? '‚úÖ Set' : '‚ùå Missing'}</p>
            <p>Environment: {import.meta.env.MODE}</p>
          </div>
        </details>
      </div>
      
      <!-- Links -->
      <div class="text-center space-y-2">
        <a href="/" class="text-sm text-gray-400 hover:text-white">
          ‚Üê Back to home
        </a>
        <br>
        <a href="/debug-privy" class="text-xs text-gray-500 hover:text-gray-400">
          üß™ Advanced Privy Debug
        </a>
      </div>
    </div>
  </div>
</body>
</html>