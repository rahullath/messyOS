---
// src/pages/login.astro - Debug Privy Login Page
import Layout from '../layouts/Layout.astro';
import MinimalPrivyProvider from '../components/auth/MinimalPrivyProvider.tsx';
import SimpleLoginButton from '../components/auth/SimpleLoginButton.tsx';
---

<Layout title="Sign In - messyOS">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 flex items-center justify-center p-6">
    <div class="max-w-md w-full space-y-8">
      
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white mb-2">
          <span class="text-cyan-400">messy</span>OS
        </h1>
        <p class="text-gray-300 mb-8">Your AI-powered life optimization system</p>
      </div>

      <!-- Minimal Privy Login -->
      <MinimalPrivyProvider client:load>
        <SimpleLoginButton client:load />
      </MinimalPrivyProvider>
      
      <!-- Links -->
      <div class="text-center space-y-2">
        <a href="/" class="text-sm text-gray-400 hover:text-white">
          ‚Üê Back to home
        </a>
      </div>
    </div>
  </div>
</Layout>