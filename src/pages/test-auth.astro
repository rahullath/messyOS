---
// src/pages/test-auth.astro - Debug authentication flow
import Layout from '../layouts/Layout.astro';
import { createServerAuth } from '../lib/auth/simple-multi-user';

const serverAuth = createServerAuth(Astro.cookies);
const user = await serverAuth.getUser();

// Get user preferences to check onboarding status
const preferences = user ? await serverAuth.getUserPreferences(user.id) : null;
---

<Layout title="Auth Test - messyOS">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 flex items-center justify-center p-6">
    <div class="max-w-2xl w-full">
      <div class="bg-black/20 backdrop-blur-sm border border-white/10 rounded-xl p-8">
        <h1 class="text-3xl font-bold text-white mb-6">Authentication Debug</h1>
        
        <div class="space-y-4 text-white">
          <div>
            <strong>User Authenticated:</strong> {user ? 'Yes' : 'No'}
          </div>
          
          {user && (
            <>
              <div>
                <strong>User ID:</strong> {user.id}
              </div>
              <div>
                <strong>User Email:</strong> {user.email}
              </div>
              <div>
                <strong>Has Preferences:</strong> {preferences ? 'Yes' : 'No'}
              </div>
              <div>
                <strong>Onboarding Complete:</strong> {preferences ? 'Yes' : 'No'}
              </div>
            </>
          )}
          
          <div class="mt-6 space-y-2">
            <a href="/" class="block text-cyan-400 hover:text-cyan-300">→ Go to Dashboard</a>
            <a href="/onboarding" class="block text-cyan-400 hover:text-cyan-300">→ Go to Onboarding</a>
            <a href="/login" class="block text-cyan-400 hover:text-cyan-300">→ Go to Login</a>
            <a href="/landing" class="block text-cyan-400 hover:text-cyan-300">→ Go to Landing</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout> 