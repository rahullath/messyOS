---
// src/pages/test-error-handling.astro - Test page for error handling functionality
import Layout from '../layouts/Layout.astro';
---

<Layout title="Error Handling Test - MessyOS">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-6">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-white mb-2">
          Error Handling Test
        </h1>
        <p class="text-gray-400">Test comprehensive error handling and recovery features</p>
      </div>
      
      <!-- Error Handling Test Component -->
      <div id="error-test-container"></div>
    </div>
  </div>
</Layout>

<script>
  import { ErrorHandlingTest } from '../components/auth/ErrorHandlingTest.tsx';
  import { createRoot } from 'react-dom/client';
  import React from 'react';

  const container = document.getElementById('error-test-container');
  if (container) {
    const root = createRoot(container);
    root.render(React.createElement(ErrorHandlingTest));
  }
</script>