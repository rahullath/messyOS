---
// Simple callback page that lets Supabase handle everything automatically
---

<!DOCTYPE html>
<html>
<head>
  <title>Completing Login...</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body { 
      font-family: system-ui; 
      display: flex; 
      align-items: center; 
      justify-content: center; 
      height: 100vh; 
      margin: 0; 
      background: linear-gradient(135deg, #1e293b, #334155);
      color: white;
    }
    .spinner { 
      width: 40px; 
      height: 40px; 
      border: 4px solid #64748b; 
      border-top: 4px solid #06b6d4; 
      border-radius: 50%; 
      animation: spin 1s linear infinite; 
      margin-bottom: 20px;
    }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
  </style>
</head>
<body>
  <div style="text-align: center;">
    <div class="spinner"></div>
    <p>Completing your authentication...</p>
    <p style="color: #64748b; font-size: 14px;">Please wait...</p>
  </div>

  <script type="module">
    import { supabase } from '/src/lib/supabase/client.js';
    
    console.log('üîÑ OAuth callback received, processing session...');
    
    // Handle the auth callback
    async function handleAuthCallback() {
      try {
        // Let Supabase automatically handle the session from URL params
        console.log('üîç Waiting for Supabase to process auth state...');
        
        // Wait a bit for auth state changes to process
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        // Check for session
        const { data: { session }, error } = await supabase.auth.getSession();
        
        if (error) {
          console.error('‚ùå Auth callback error:', error);
          window.location.href = '/login?error=callback_failed';
          return;
        }
        
        if (session) {
          console.log('‚úÖ Auth callback successful, user:', session.user.email);
          
          // Stay on localhost in development
          const isDev = window.location.hostname === 'localhost';
          const redirectUrl = isDev ? '/dashboard' : '/dashboard';
          
          console.log('üè† Redirecting to:', redirectUrl);
          window.location.href = redirectUrl;
        } else {
          console.log('‚ö†Ô∏è No session found in callback, checking auth state changes...');
          
          // Listen for auth state change
          const { data: { subscription } } = supabase.auth.onAuthStateChange((event, session) => {
            if (event === 'SIGNED_IN' && session) {
              console.log('‚úÖ Auth state change detected, redirecting...');
              subscription.unsubscribe();
              
              // Stay on localhost in development
              const isDev = window.location.hostname === 'localhost';
              const redirectUrl = isDev ? '/dashboard' : '/dashboard';
              
              console.log('üè† Redirecting to:', redirectUrl);
              window.location.href = redirectUrl;
            } else if (event === 'SIGNED_OUT') {
              console.log('‚ùå Sign out detected during callback');
              subscription.unsubscribe();
              window.location.href = '/login?error=signed_out';
            }
          });
          
          // Fallback timeout
          setTimeout(() => {
            subscription.unsubscribe();
            console.log('‚ö†Ô∏è Auth timeout, redirecting to login');
            window.location.href = '/login?error=timeout';
          }, 10000);
        }
      } catch (error) {
        console.error('‚ùå Callback processing error:', error);
        window.location.href = '/login?error=processing_failed';
      }
    }
    
    // Process the callback when DOM is loaded
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', handleAuthCallback);
    } else {
      handleAuthCallback();
    }
  </script>
</body>
</html>