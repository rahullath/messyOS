---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { createServerAuth } from '../lib/auth/simple-multi-user';
import DailyPlanCard from '../components/dashboard/cards/DailyPlanCard.tsx';

const serverAuth = createServerAuth(Astro.cookies);
const user = await serverAuth.getUser();

if (!user) {
  return Astro.redirect('/login');
}
---

<DashboardLayout title="Dashboard - MeshOS" user={user}>
  <div class="space-y-8">
    <div>
      <h1 class="text-3xl font-semibold text-text-primary mb-2">Executive Function Dashboard</h1>
      <p class="text-text-secondary">Build a realistic day plan, reduce friction, and keep momentum.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <DailyPlanCard client:load />

      <a href="/habits" class="card hover:bg-surface-hover transition-colors">
        <div class="flex items-center">
          <div class="text-3xl mr-4">H</div>
          <div>
            <h3 class="text-lg font-semibold text-text-primary">Habits</h3>
            <p class="text-text-secondary text-sm">Log today, keep streak context</p>
          </div>
        </div>
      </a>

      <a href="/calendar" class="card hover:bg-surface-hover transition-colors">
        <div class="flex items-center">
          <div class="text-3xl mr-4">C</div>
          <div>
            <h3 class="text-lg font-semibold text-text-primary">Calendar</h3>
            <p class="text-text-secondary text-sm">See anchors and time blocks</p>
          </div>
        </div>
      </a>

      <a href="/settings" class="card hover:bg-surface-hover transition-colors">
        <div class="flex items-center">
          <div class="text-3xl mr-4">S</div>
          <div>
            <h3 class="text-lg font-semibold text-text-primary">Settings</h3>
            <p class="text-text-secondary text-sm">Tune preferences and defaults</p>
          </div>
        </div>
      </a>
    </div>

    <div class="card">
      <h2 class="text-xl font-semibold text-text-primary mb-4">Start Here</h2>
      <p class="text-text-secondary mb-4">
        This app is for executive-function support first. Focus on the next actionable step, not perfect optimization.
      </p>

      <div class="space-y-3">
        <div class="flex items-center">
          <div class="w-2 h-2 bg-accent-primary rounded-full mr-3"></div>
          <span class="text-text-primary">Generate today's plan and follow chain steps one at a time.</span>
        </div>
        <div class="flex items-center">
          <div class="w-2 h-2 bg-accent-success rounded-full mr-3"></div>
          <span class="text-text-primary">Log 1-3 key habits only. Keep it lightweight.</span>
        </div>
        <div class="flex items-center">
          <div class="w-2 h-2 bg-accent-purple rounded-full mr-3"></div>
          <span class="text-text-primary">Use gate checks before leaving so essentials are not forgotten.</span>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
