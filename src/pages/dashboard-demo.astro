        .border-messy-border { border-color: var(--messy-border); }
        .border-messy-primary { border-color: var(--messy-primary); }

        /* Dashboard Card Styles */
        .messy-card {
          background-color: var(--messy-card-bg);
          border: 1px solid var(--messy-border);
          border-radius: 12px;
          padding: 16px;
          transition: all 0.3s ease;
          box-shadow: var(--messy-shadow-sm);
        }

        .messy-card:hover {
          background-color: var(--messy-card-hover);
          border-color: rgba(255, 255, 255, 0.2);
          box-shadow: var(--messy-shadow-md);
          transform: translateY(-1px);
        }

        .messy-card-glass {
          background: var(--messy-glass-bg);
          border: 1px solid var(--messy-glass-border);
          backdrop-filter: blur(12px);
          -webkit-backdrop-filter: blur(12px);
        }

        .messy-btn-primary {
          background-color: var(--messy-primary);
          color: black;
          font-weight: 500;
          padding: 8px 16px;
          border-radius: 8px;
          transition: all 0.2s ease;
          box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
        }

        .messy-btn-primary:hover {
          box-shadow: 0 0 30px rgba(0, 212, 255, 0.5);
          transform: translateY(-1px);
        }

        .messy-btn-secondary {
          background-color: var(--messy-card-bg);
          border: 1px solid var(--messy-border);
          color: var(--messy-primary);
          font-weight: 500;
          padding: 8px 16px;
          border-radius: 8px;
          transition: all 0.2s ease;
        }

        .messy-btn-secondary:hover {
          background-color: var(--messy-card-hover);
          border-color: var(--messy-primary);
        }

        .messy-btn-ghost {
          color: var(--messy-secondary);
          background: transparent;
          padding: 8px 12px;
          border-radius: 8px;
          transition: all 0.2s ease;
        }

        .messy-btn-ghost:hover {
          color: var(--messy-primary);
          background-color: var(--messy-card-bg);
        }

        .messy-input {
          background-color: var(--messy-card-bg);
          border: 1px solid var(--messy-border);
          color: var(--messy-text-primary);
          padding: 8px 16px;
          border-radius: 8px;
          transition: border-color 0.2s ease;
        }

        .messy-input:focus {
          border-color: var(--messy-primary);
          outline: none;
        }

        .messy-input::placeholder {
          color: var(--messy-text-muted);
        }

        .messy-status-active {
          width: 8px;
          height: 8px;
          background-color: var(--messy-success);
          border-radius: 50%;
          animation: pulse 2s infinite;
        }

        .messy-status-processing {
          width: 8px;
          height: 8px;
          background-color: var(--messy-warning);
          border-radius: 50%;
          animation: spin 1s linear infinite;
        }

        .messy-status-idle {
          width: 8px;
          height: 8px;
          background-color: var(--messy-text-muted);
          border-radius: 50%;
        }

        @keyframes pulse {
          0%, 100% { opacity: 1; }
          50% { opacity: 0.5; }
        }

        @keyframes spin {
          from { transform: rotate(0deg); }
          to { transform: rotate(360deg); }
        }

        .messy-scrollbar::-webkit-scrollbar {
          width: 6px;
        }

        .messy-scrollbar::-webkit-scrollbar-track {
          background: var(--messy-card-bg);
          border-radius: 3px;
        }

        .messy-scrollbar::-webkit-scrollbar-thumb {
