    <style>
        /* MessyOS Dashboard Theme - OLED Optimized */
        :root {
          /* OLED-Optimized Color Palette */
          --messy-bg: #0a0a0a;
          --messy-card-bg: #1a1a1a;
          --messy-card-hover: #2a2a2a;
          --messy-border: #2a2a2a;
          
          /* Accent Colors */
          --messy-primary: #00d4ff;
          --messy-secondary: #7c3aed;
          --messy-success: #10b981;
          --messy-warning: #f59e0b;
          --messy-error: #ef4444;
          
          /* Text Colors */
          --messy-text-primary: #ffffff;
          --messy-text-secondary: #a1a1aa;
          --messy-text-muted: #71717a;
          
          /* Glass Effects */
          --messy-glass-bg: rgba(26, 26, 26, 0.8);
          --messy-glass-border: rgba(255, 255, 255, 0.1);
          
          /* Gradients */
          --messy-gradient-primary: linear-gradient(135deg, var(--messy-primary), var(--messy-secondary));
          --messy-gradient-card: linear-gradient(135deg, var(--messy-card-bg), rgba(42, 42, 42, 0.5));
          
          /* Shadows for depth */
          --messy-shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.5);
          --messy-shadow-md: 0 4px 6px rgba(0, 0, 0, 0.3);
          --messy-shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.4);
          --messy-shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.5);
          
          /* Animation timings */
          --messy-transition-fast: 0.15s ease-out;
          --messy-transition-normal: 0.3s ease-out;
          --messy-transition-slow: 0.5s ease-out;
        }

