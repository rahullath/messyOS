        .bg-messy-card-bg { background-color: var(--messy-card-bg); }
        .bg-messy-card-hover { background-color: var(--messy-card-hover); }
        .bg-messy-primary { background-color: var(--messy-primary); }
        .bg-messy-secondary { background-color: var(--messy-secondary); }
        .bg-messy-success { background-color: var(--messy-success); }
        .bg-messy-warning { background-color: var(--messy-warning); }
        .bg-messy-error { background-color: var(--messy-error); }

        .text-messy-primary { color: var(--messy-text-primary); }
        .text-messy-secondary { color: var(--messy-text-secondary); }
        .text-messy-muted { color: var(--messy-text-muted); }
        .text-messy-accent-primary { color: var(--messy-primary); }
        .text-messy-accent-secondary { color: var(--messy-secondary); }
        .text-messy-success { color: var(--messy-success); }
        .text-messy-warning { color: var(--messy-warning); }
