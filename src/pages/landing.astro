---
// src/pages/landing.astro - Modern SaaS Landing Page
import Layout from '../layouts/Layout.astro';
---

<Layout title="messyOS - Your AI Life Optimizer">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
    <!-- Navigation -->
    <nav class="relative z-10 px-6 py-4">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="text-2xl font-bold text-white">
          <span class="text-cyan-400">messy</span>OS
        </div>
        <div class="space-x-4">
          <a href="#features" class="text-gray-300 hover:text-white transition-colors">Features</a>
          <a href="#pricing" class="text-gray-300 hover:text-white transition-colors">Pricing</a>
          <a href="/login" class="bg-cyan-600 hover:bg-cyan-700 text-white px-4 py-2 rounded-lg transition-colors">
            Sign In
          </a>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative z-10 px-6 py-20">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
          Stop managing your life.<br/>
          <span class="text-cyan-400">Start optimizing it.</span>
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          The AI-powered everything app that learns from your data, understands your patterns, 
          and helps you optimize every aspect of your life - automatically.
        </p>
        
        <!-- Waitlist Form -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8 max-w-md mx-auto mb-8">
          <h3 class="text-2xl font-semibold text-white mb-4">Join the Waitlist</h3>
          <p class="text-gray-300 mb-6">Get 30 days free when we launch + priority access</p>
          
          <form id="waitlistForm" class="space-y-4">
            <input 
              type="email" 
              name="email"
              placeholder="Enter your email" 
              required
              class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-cyan-400"
            />
            <select name="interest" class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400">
              <option value="everything" disabled selected>What do you want to optimize most?</option>
              <option value="habits">Habits & Goals</option>
              <option value="health">Health & Wellness</option>
              <option value="finance">Finance & Investments</option>
              <option value="productivity">Tasks & Productivity</option>
              <option value="everything">Everything!</option>
            </select>
            <button 
              type="submit"
              class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
            >
              Get Early Access
            </button>
          </form>
          
          <p class="text-sm text-gray-400 mt-4">
            $1/month after free trial • Cancel anytime
          </p>
        </div>

        <div class="text-gray-400">
          <p>✨ 100% customizable • 🔒 Your data, encrypted • 🤖 AI that actually understands you</p>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="relative z-10 px-6 py-20 bg-black/20">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold text-white text-center mb-16">
          One app. <span class="text-cyan-400">Infinite possibilities.</span>
        </h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Smart Data Input -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6">
            <div class="text-cyan-400 text-3xl mb-4">🧠</div>
            <h3 class="text-xl font-semibold text-white mb-3">Smart Data Dumping</h3>
            <p class="text-gray-300">
              Just talk naturally: "Spent $50 on groceries, worked out 45 mins, need to apply for visa" 
              - our AI structures everything automatically.
            </p>
          </div>

          <!-- Customizable Modules -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6">
            <div class="text-cyan-400 text-3xl mb-4">🎛️</div>
            <h3 class="text-xl font-semibold text-white mb-3">100% Customizable</h3>
            <p class="text-gray-300">
              Choose your modules, themes, and features. Your dashboard shows only what matters to you. 
              No bloatware, ever.
            </p>
          </div>

          <!-- AI Agent -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6">
            <div class="text-cyan-400 text-3xl mb-4">🤖</div>
            <h3 class="text-xl font-semibold text-white mb-3">Personal AI Coach</h3>
            <p class="text-gray-300">
              Your AI knows your patterns, suggests optimizations, and helps you achieve goals with 
              personalized strategies that actually work.
            </p>
          </div>

          <!-- Integrations -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6">
            <div class="text-cyan-400 text-3xl mb-4">🔗</div>
            <h3 class="text-xl font-semibold text-white mb-3">Universal Integrations</h3>
            <p class="text-gray-300">
              Connect Gmail, GitHub, Notion, banking, fitness apps, shopping platforms - 
              everything in one intelligent dashboard.
            </p>
          </div>

          <!-- Security -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6">
            <div class="text-cyan-400 text-3xl mb-4">🔒</div>
            <h3 class="text-xl font-semibold text-white mb-3">Bank-Grade Security</h3>
            <p class="text-gray-300">
              End-to-end encryption, zero-knowledge architecture. Your data stays yours. 
              We can't see it, nobody can.
            </p>
          </div>

          <!-- Cross-Domain Insights -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6">
            <div class="text-cyan-400 text-3xl mb-4">📊</div>
            <h3 class="text-xl font-semibold text-white mb-3">Cross-Domain Intelligence</h3>
            <p class="text-gray-300">
              Discover hidden connections: how sleep affects productivity, spending patterns during stress, 
              and optimization opportunities you never knew existed.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Use Cases -->
    <section class="relative z-10 px-6 py-20">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-white mb-12">
          Perfect for <span class="text-cyan-400">ambitious people</span> who want more
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8 text-left">
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-white">📈 For Growth-Minded Individuals</h3>
            <ul class="text-gray-300 space-y-2">
              <li>• Track habits that actually matter to your goals</li>
              <li>• Optimize your health and energy levels</li>
              <li>• Make better financial decisions with data</li>
              <li>• Build systems that compound over time</li>
            </ul>
          </div>
          
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-white">🚀 For High Performers</h3>
            <ul class="text-gray-300 space-y-2">
              <li>• Manage complex projects and deadlines</li>
              <li>• Integrate all your productivity tools</li>
              <li>• Get AI-powered optimization suggestions</li>
              <li>• Focus on what moves the needle</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section id="pricing" class="relative z-10 px-6 py-20 bg-black/20">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-white mb-8">
          Simple, honest pricing
        </h2>
        
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
          <div class="text-center">
            <div class="text-5xl font-bold text-white mb-2">$1</div>
            <div class="text-gray-300 mb-6">per month</div>
            
            <div class="space-y-3 text-left mb-8">
              <div class="flex items-center text-gray-300">
                <span class="text-green-400 mr-3">✓</span>
                Unlimited data and AI analysis
              </div>
              <div class="flex items-center text-gray-300">
                <span class="text-green-400 mr-3">✓</span>
                All integrations and modules
              </div>
              <div class="flex items-center text-gray-300">
                <span class="text-green-400 mr-3">✓</span>
                Personal AI coach
              </div>
              <div class="flex items-center text-gray-300">
                <span class="text-green-400 mr-3">✓</span>
                Bank-grade security
              </div>
              <div class="flex items-center text-gray-300">
                <span class="text-green-400 mr-3">✓</span>
                30-day free trial
              </div>
            </div>
            
            <button class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
              Start Free Trial
            </button>
            
            <p class="text-sm text-gray-400 mt-4">
              No credit card required • Cancel anytime • UPI autopay
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="relative z-10 px-6 py-20">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Ready to optimize your life?
        </h2>
        <p class="text-gray-300 mb-8">
          Join the waitlist and be among the first to experience the future of personal optimization.
        </p>
        <button 
          onclick="document.getElementById('waitlistForm').scrollIntoView()"
          class="bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-3 px-8 rounded-lg transition-colors"
        >
          Get Early Access
        </button>
      </div>
    </section>

    <!-- Footer -->
    <footer class="relative z-10 px-6 py-8 border-t border-white/10">
      <div class="max-w-4xl mx-auto text-center text-gray-400">
        <p>&copy; 2024 messyOS. Built for people who want to optimize everything.</p>
        <div class="mt-4 space-x-6">
          <a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
          <a href="/terms" class="hover:text-white transition-colors">Terms</a>
          <a href="mailto:hey@messyos.com" class="hover:text-white transition-colors">Contact</a>
        </div>
      </div>
    </footer>
  </div>

  <!-- Background Animation -->
  <div class="fixed inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-900/20 to-blue-900/20"></div>
    <div class="absolute top-0 left-0 w-72 h-72 bg-cyan-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
  </div>

  <script>
    // Waitlist form handling
    document.getElementById('waitlistForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target as HTMLFormElement;
      const email = (form.elements.namedItem('email') as HTMLInputElement).value;
      const interest = (form.elements.namedItem('interest') as HTMLSelectElement).value;
      
      try {
        const response = await fetch('/api/waitlist', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, interest })
        });
        
        const result = await response.json();

        if (response.ok) {
          alert('🎉 Welcome to the waitlist! You will be redirected to the onboarding.');
          window.location.href = '/onboarding';
        } else {
          alert(`Error: ${result.error || 'Something went wrong. Please try again.'}`);
        }
      } catch (error) {
        alert('Something went wrong. Please try again.');
      }
    });
  </script>
</Layout>
