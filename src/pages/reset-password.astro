---
// src/pages/reset-password.astro - Password Reset Page
import Layout from '../layouts/Layout.astro';
import { PasswordResetPageContent } from '../components/auth/PasswordResetPageContent.tsx';

// Check if this is an update mode (from email link) or request mode
const url = new URL(Astro.request.url);
const mode = url.searchParams.get('mode');
const token = url.searchParams.get('token');
const type = url.searchParams.get('type');

const isUpdateMode = mode === 'update' || (token && type === 'recovery');
---

<Layout title="Reset Password - MessyOS">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-6">
    <div class="max-w-md w-full">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-white mb-2">
          <span class="text-cyan-400">Messy</span>OS
        </h1>
        <p class="text-gray-400">Your AI-powered life optimizer</p>
      </div>
      
      <!-- Password Reset Form -->
      <PasswordResetPageContent mode={isUpdateMode ? 'update' : 'request'} client:load />
      
      <!-- Footer -->
      <div class="text-center mt-6">
        <a href="/" class="text-sm text-gray-400 hover:text-white transition-colors">
          ‚Üê Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>
