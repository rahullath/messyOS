---
import { createServerClient } from '../lib/supabase/server';

const supabase = createServerClient(Astro.cookies);
const { data: { user }, error: authError } = await supabase.auth.getUser();

if (authError || !user) {
  return Astro.redirect('/login');
}

const { data: preferences } = await supabase
  .from('user_preferences')
  .select('*')
  .eq('user_id', user.id)
  .maybeSingle();

if (preferences) {
  return Astro.redirect('/dashboard');
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Onboarding - MeshOS</title>
  <style>
    body {
      margin: 0;
      min-height: 100vh;
      background: linear-gradient(160deg, #020617 0%, #0f172a 55%, #083344 100%);
      color: #e2e8f0;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    }
    .shell {
      max-width: 860px;
      margin: 0 auto;
      padding: 28px 20px 60px;
    }
    .card {
      background: rgba(15, 23, 42, 0.7);
      border: 1px solid rgba(148, 163, 184, 0.22);
      border-radius: 18px;
      padding: 24px;
      backdrop-filter: blur(6px);
    }
    .grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 14px;
    }
    @media (min-width: 760px) {
      .grid { grid-template-columns: 1fr 1fr; }
    }
    .field {
      display: grid;
      gap: 6px;
    }
    label { font-weight: 600; color: #cbd5e1; }
    select, input {
      background: rgba(30, 41, 59, 0.75);
      border: 1px solid rgba(148, 163, 184, 0.35);
      border-radius: 10px;
      color: #e2e8f0;
      padding: 10px 12px;
      font-size: 14px;
    }
    .btn {
      width: 100%;
      margin-top: 14px;
      background: linear-gradient(120deg, #0891b2, #0f766e);
      color: #ecfeff;
      border: 0;
      border-radius: 12px;
      padding: 12px 16px;
      font-weight: 700;
      cursor: pointer;
    }
    .btn:disabled { opacity: 0.7; cursor: not-allowed; }
    .meta {
      margin-top: 10px;
      font-size: 13px;
      color: #94a3b8;
      text-align: center;
    }
  </style>
</head>
<body>
  <main class="shell">
    <div class="card" style="margin-bottom: 16px;">
      <p style="text-transform: uppercase; letter-spacing: .18em; color: #67e8f9; font-size: 11px; margin: 0 0 8px;">
        Setup
      </p>
      <h1 style="margin: 0 0 8px; font-size: clamp(26px, 4vw, 38px); color: #f8fafc;">
        Build your first stable day
      </h1>
      <p style="margin: 0; color: #cbd5e1;">
        Quick onboarding for executive-function support. No pressure, no optimization theater.
      </p>
    </div>

    <form id="onboarding-form" class="card" action="/api/user/complete-onboarding" method="POST">
      <div class="grid">
        <div class="field">
          <label for="commitments">1. Do you have fixed commitments most days?</label>
          <select id="commitments" name="commitments" required>
            <option value="" disabled selected>Select one</option>
            <option value="yes-many">Yes, several fixed anchors</option>
            <option value="yes-few">Yes, one or two anchors</option>
            <option value="none">No, mostly unstructured days</option>
          </select>
        </div>

        <div class="field">
          <label for="starting_difficulty">2. What is hardest right now?</label>
          <select id="starting_difficulty" name="starting_difficulty" required>
            <option value="" disabled selected>Select one</option>
            <option value="starting">Starting tasks at all</option>
            <option value="switching">Switching between tasks</option>
            <option value="finishing">Finishing and closing loops</option>
          </select>
        </div>

        <div class="field">
          <label for="structure_style">3. Structure style you prefer?</label>
          <select id="structure_style" name="structure_style" required>
            <option value="" disabled selected>Select one</option>
            <option value="gentle">Gentle guidance and flexibility</option>
            <option value="balanced">Balanced structure</option>
            <option value="firm">Firm sequence and clear checkboxes</option>
          </select>
        </div>

        <div class="field">
          <label for="usual_wake_time">4. Typical wake time?</label>
          <input type="time" id="usual_wake_time" name="usual_wake_time" value="07:00" required />
        </div>
      </div>

      <button type="submit" id="submit-btn" class="btn">
        Continue to Dashboard
      </button>
      <p class="meta">You can change everything later in Settings.</p>
    </form>
  </main>

  <script>
    document.getElementById('onboarding-form')?.addEventListener('submit', () => {
      const submitBtn = document.getElementById('submit-btn');
      if (submitBtn) {
        submitBtn.setAttribute('disabled', 'true');
        submitBtn.textContent = 'Saving setup...';
      }
    });
  </script>
</body>
</html>
